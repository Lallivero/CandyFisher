<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/dialog_background_blue"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="OPTIONS"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="30dp"

            android:foregroundGravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/check_fail_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:buttonTint="@color/yellow"
                android:checked="false"
                android:includeFontPadding="false"
                android:padding="20dp"
                android:paddingStart="10dp"
                android:text="Pause On Fail"
                android:textAlignment="viewEnd"
                android:textColor="@color/yellow"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_help_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"

                android:buttonTint="@color/yellow"


                android:padding="20dp"
                android:text="Help Text On"
                android:textAlignment="viewEnd"
                android:textColor="@color/yellow"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/check_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:buttonTint="@color/yellow"


                android:padding="20dp"
                android:text="Tutorial On (Exclusive)"
                android:textAlignment="viewEnd"
                android:textColor="@color/yellow"
                android:textStyle="bold" />

            <Button
                android:id="@+id/options_button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/dialog_background_gul"
                android:textColor="@color/dark_blue"
                android:padding="20dp"
                android:text="@string/nfc_dialog_done_button" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>